<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Public Directoriy</title>
</head>

<body>

  <div id="layout">

      <div id="menu">
          <div class="pure-menu">
              <a class="pure-menu-heading" href="/">Table of Contents</a>

              <ul class="pure-menu-list">
                <% @files.each do |file| %>
                  <li class="pure-menu-item">
                    <a href="<%= file %>" class="pure-menu-link"><%= file %></a>
                  </li>
                <% end %>
              </ul>
          </div>
      </div>

      <p>
        <% if params[:sort] == "desc" %>
          <a href="/">Sort ascending</a>
        <% else %>
          <a href="/?sort=desc">Sort descending</a>
        <% end %>
</p>

</body>
</html>